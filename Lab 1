#zadanie 5

bok1= int(input("Podaj dlugosc pierwszego boku "))
bok2 = int(input("Podaj dlugosc drugiego boku "))
print(bok1 * bok2)
obw = 2*bok1 + 2*bok2
print("obwod prostokata wynosi:",obw)

#zadanie 6

cena = 6.5
droga = float(input("jaka trase przejechales? "))
spalanie = float(input("ile pali twoj samochod [l/100km]? "))
benzyna = droga/100 * spalanie
koszty = benzyna * cena

print(f"w trakcie tej podrozy twoj samochod spali {benzyna} litry paliwa, co bedzie ci kosztowac {koszty} zlotych.")







#Zadanie 7

import random

cena = 6.5
droga = random.randint(1, 1000)
spalanie = float(input("ile pali twoj samochod [l/100km]: "))
benzyna = droga/100 * spalanie
koszty = benzyna * cena
print(f"W trakcie przejechanej trasy w {droga}km twoj samochod spali {benzyna} litrow paliwa, co bedzie ci kosztowalo {koszty} zlotych")
